<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="develop.beta1139.projectbase.views.MainActivity">
    <data>
        <variable name="mainViewModel" type="develop.beta1139.projectbase.viewModels.MainViewModel"/>
        <variable name="mainActivity" type="develop.beta1139.projectbase.views.MainActivity"/>
    </data>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="@{mainViewModel.mText}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:text="button"
            android:onClick="@{mainActivity.onClick}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</layout>

